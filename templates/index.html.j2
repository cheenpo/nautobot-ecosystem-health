<!doctype html>
<html lang="en" data-bs-theme="dark">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Nautobot Ecosystem Status</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        .nav-link {
            color: var(--bs-secondary-color);
        }

        .nav-link:hover {
            color: var(--bs-nav-tabs-link-active-color);
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-md bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <i class="bi bi-activity text-danger"></i>
                Nautobot Ecosystem Health
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
                aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a class="nav-link active" aria-current="page" href="index.html">
                        <i class="bi bi-clock-history text-warning"></i>
                        Status
                    </a>
                    <a class="nav-link" href="badges.html">
                        <i class="bi bi-lightning-fill text-success"></i>
                        Live Badges
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <div class="container">
        <table class="table table-sm table-hover">
            <thead>
                <tr>
                    <th>App Name <i class="bi bi-github"></i></th>
                    <th>Latest Run</th>
                    <th>Streak</th>
                    <th>Run History</th>
                </tr>
            </thead>
            <tbody class="table-striped table-group-divider">
                {% for p in projects['nautobot'] %}
                {% set latest_run = upstream[p['repo']]['runs'][0] %}
                <tr>
                    <td><a href="https://github.com/{{ p['org'] }}/{{ p['repo'] }}"
                            class="link-body-emphasis link-offset-2 link-underline-opacity-0 link-underline-opacity-100-hover">{{
                            p['name'] }}</a></td>
                    <td>
                        <a href="{{ latest_run['html_url'] }}"
                            class="link-underline-opacity-0 {{ 'link-success' if latest_run['status']=='completed' else 'link-danger' }}"
                            data-bs-toggle="tooltip" data-bs-title="Completed?">
                            <i class="bi bi-c-circle-fill"></i>
                        </a>
                        <a href="{{ latest_run['html_url'] }}"
                            class="link-underline-opacity-0 {{ 'link-success' if latest_run['conclusion']=='success' else 'link-danger' }}">
                            <i class="bi {{ 'bi-check-circle' if latest_run['conclusion']=='success' else 'bi-x-circle' }}"></i>
                        </a>
                        {{ latest_run["updated_at"] }}
                    </td>
                    <td>
                        <div class="{{ 'text-success' if latest_run['conclusion']=='success' else 'text-danger' }}">{{ upstream[p['repo']]['success_streak']['length'] if latest_run['conclusion']=='success' else upstream[p['repo']]['fail_streak']['length']}}</div>
                    </td>
                    <td>
                        {% for run in upstream[p['repo']]['runs'] %}
                        <a href="{{ run['html_url'] }}"
                            class="link-underline-opacity-0 {{ 'link-success' if run['conclusion']=='success' else 'link-danger' }}">
                            <i class="bi {{ 'bi-check-circle' if run['conclusion']=='success' else 'bi-x-circle' }}"></i>
                        </a>
                        {% endfor %}
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <script>
        const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]')
        const tooltipList = [...tooltipTriggerList].map(tooltipTriggerEl => new bootstrap.Tooltip(tooltipTriggerEl))
    </script>
</body>

</html>
